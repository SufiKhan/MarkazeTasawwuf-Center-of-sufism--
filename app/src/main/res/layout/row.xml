<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teaching"
        android:text="Header"
        android:layout_marginTop="10dp"
        android:textColor="@color/abc_search_url_text_pressed"
        android:typeface="serif"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:lines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/teacher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/background_material_dark"
        android:typeface="serif"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/teaching"
        android:textAlignment="center"
        android:layout_alignRight="@+id/teaching"
        android:layout_alignEnd="@+id/teaching" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@drawable/read_more_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
